.SUFFIXES:
.SUFFIXES: .c .f .o

srcdir = @srcdir@
VPATH = @srcdir@

CC = @CC@

C_COMPILE_FLAGS=@CFLAGS@
CXX_COMPILE_FLAGS=@CXXFLAGS@
CINCLUDES=@INCLUDES@ @MPIINCLUDE@
CDEFS = @TIMERDEFS@ -DHYPRE_TIMING

CFLAGS =\
   -I$(srcdir)/..\
   -I$(srcdir)\
   ${C_COMPILE_FLAGS}\
   ${CINCLUDES}\
   ${CDEFS}

RANLIB = @RANLIB@


##################################################################
# Targets
##################################################################

all: libHYPRE_utilities.a

install: all
	@cp -f $(srcdir)/HYPRE_*.h $$HYPRE_INSTALL_DIR/include/.
	@cp -f $(srcdir)/utilities.h $$HYPRE_INSTALL_DIR/include/.
	@cp -f libHYPRE_*.a $$HYPRE_INSTALL_DIR/lib/.

clean:
	@rm -f *.o
	@rm -f *.prj
	@rm -f *.kdd

veryclean: clean
	@rm -f libHYPRE_*.a

##################################################################
# Utilities rules
##################################################################
 
UTILITIES_HEADERS =\
 memory.h\
 mpistubs.h\
 thread_mpistubs.h\
 threading.h\
 timing.h\
 umalloc_local.h\
 utilities.h\
 amg_linklist.h\
 HYPRE_utilities.h\
 fortran.h

UTILITIES_FILES =\
 memory.c\
 memory_dmalloc.c\
 mpistubs.c\
 thread_mpistubs.c\
 threading.c\
 timer.c\
 timing.c\
 amg_linklist.c\
 binsearch.c\
 qsplit.c\
 umalloc_local.c\
 qsort.c\
 random.c

UTILITIES_OBJS = ${UTILITIES_FILES:.c=.o}
 
libHYPRE_utilities.a: ${UTILITIES_OBJS}
	@echo  "Building $@ ... "
	ar -rcu $@ ${UTILITIES_OBJS}
	${RANLIB} $@

${UTILITIES_OBJS}: ${UTILITIES_HEADERS}

timer.o: timer.c
	${CC} -D_POSIX_SOURCE -o $@ -c ${CFLAGS} $<

##################################################################
# Generic rules
##################################################################

.c.o:
	${CC} -o $@ -c ${CFLAGS} $<

