PATH=/usr/sbin:/usr/bsd:/sbin:/usr/bin:/bin:/usr/bin/X11:/usr/local/bin
if [ -x "/usr/bsd/hostname" ] 
then
    HYPRE_HOST=`/usr/bsd/hostname`
fi

case "$HYPRE_HOST" in
  riptide*)
    if [ -r /usr/local/modules/modules/init/ksh ]
    then
      . /usr/local/modules/modules/init/ksh
      module load modules
      module load MIPSpro
#     module load totalview
      module load local
    fi
    ;;
  nirvana|n*)
    if [ -f /opt/modules/modules/init/sh ] 
    then 
      . /opt/modules/modules/init/sh
    fi
    if [ -f /opt/modules/modules/modulefiles/modules ]
    then
      module load modules
    fi
    if [ -f /opt/modulefiles/MIPSpro_latest ]
    then
      module load MIPSpro_latest
    fi
    if [ -f /opt/modulefiles/mpt_latest ]
    then
      module load mpt_latest
    fi
    ;;
  *)
    :
    ;;
esac
export PATH
MPI_TYPE_MAX=65536
export MPI_TYPE_MAX
