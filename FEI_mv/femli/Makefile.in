all: 
	@ \
	for head in ${HEADERS}; \
	do \
	    (cp -fp $$head ./lib); \
	done;\
	for file in ${FILES}; \
	do \
	    (cp -fp $$file ./lib); \
	done;\
	(cd ./lib && $(MAKE) install)

install: all

clean:
	@(cd ./lib && $(MAKE) $@)

veryclean: clean
	@(cd ./lib && $(MAKE) $@)
	@rm -f Makefile
