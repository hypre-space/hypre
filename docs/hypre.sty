%---------------------------------------------------------------------
% Environment: TitlePage
%---------------------------------------------------------------------

\def\TitlePage{\begin{titlepage}%
\setlength{\parindent}{0in}\vspace*{1.0in}
}
\def\endTitlePage{\vspace*{0.5in}\end{titlepage}}

%---------------------------------------------------------------------
% Command: Title
%---------------------------------------------------------------------

\def\Title#1{%
\makebox[\textwidth][l]{\LARGE\bf #1}
\rule{\textwidth}{2mm}
}

%---------------------------------------------------------------------
% Command: SubTitle
%---------------------------------------------------------------------

\def\SubTitle#1{\makebox[\textwidth][r]{#1}}

%---------------------------------------------------------------------
% Command: Author
%---------------------------------------------------------------------

\def\Author#1{%
\vfill
\noindent
{\large\bf #1}
\newline
\rule{\textwidth}{1mm}
}

%---------------------------------------------------------------------
% Environment: CopyrightPage
%---------------------------------------------------------------------

\def\CopyrightPage{\begin{titlepage}%
\setlength{\parindent}{0in}\vspace*{3.0in}
}
\def\endCopyrightPage{\end{titlepage}}

%---------------------------------------------------------------------
% Command: InsertGraphics
%---------------------------------------------------------------------

\def\InsertGraphics#1#2{%
\includegraphics[#2]{#1.eps}
}




