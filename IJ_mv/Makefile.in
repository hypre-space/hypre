.SUFFIXES:
.SUFFIXES: .c .f .o

srcdir = @srcdir@
VPATH = @srcdir@


CC = @CC@

C_COMPILE_FLAGS=@CFLAGS@
CXX_COMPILE_FLAGS=@CXXFLAGS@
CINCLUDES=@INCLUDES@ @MPIINCLUDE@

CFLAGS =\
 ${C_COMPILE_FLAGS}\
 -I..\
 -I$(srcdir)\
 -I$(srcdir)/..\
 -I$(srcdir)/../utilities\
 -I$(srcdir)/../struct_mv\
 -I$(srcdir)/../seq_mv\
 -I$(srcdir)/../parcsr_mv\
 -I$(srcdir)/../parcsr_ls\
 ${CINCLUDES} ${CDEFS}

RANLIB= @RANLIB@

MPILIBFLAGS = @MPILIBDIRS@ @MPILIBS@ @MPIFLAGS@
LIBFLAGS = @LIBDIRS@ @LIBS@
LDLIBFLAGS = @LDLIBDIRS@ @LDLIBS@

LFLAGS =\
 -L.\
 -L../utilities\
 -L../struct_mv\
 -L../seq_mv\
 -L../parcsr_mv\
 -lHYPRE_IJ_mv\
 -lHYPRE_parcsr_mv\
 -lHYPRE_seq_mv\
 -lHYPRE_mv\
 -lHYPRE_utilities\
 ${MPILIBFLAGS} ${LIBFLAGS} ${LDLIBFLAGS}

HEADERS =\
 aux_parcsr_matrix.h\
 HYPRE_IJ_mv.h \
 IJ_mv.h \
 IJ_matrix.h

FILES =\
 aux_parcsr_matrix.c\
 hypre_IJMatrix_parcsr.c\
 hypre_IJVector_parcsr.c\
 hypre_IJMatrix.c\
 hypre_IJVector.c\
 HYPRE_IJMatrix.c\
 HYPRE_IJVector.c\
 F90_hypre_IJMatrix.c\
 F90_HYPRE_IJMatrix.c\
 F90_HYPRE_IJVector.c

OBJS = ${FILES:.c=.o}

##################################################################
# Targets
##################################################################

all: libHYPRE_IJ_mv.a

install: all
	@cp -f $(srcdir)/HYPRE_*.h $$HYPRE_INSTALL_DIR/include/.
	@cp -f $(srcdir)/IJ_mv.h $$HYPRE_INSTALL_DIR/include/.
	@cp -f libHYPRE_*.a $$HYPRE_INSTALL_DIR/lib/.

clean:
	@rm -f *.o

veryclean: clean
	@rm -f libHYPRE_*.a
	@rm -f driver

##################################################################
# Rules
##################################################################

libHYPRE_IJ_mv.a: ${OBJS}
	@echo  "Building $@ ... "
	ar -rcu $@ ${OBJS}
	${RANLIB} $@

driver: driver.o libHYPRE_IJ_mv.a
	@echo  "Linking" $@ "... "
	${CC} -o driver driver.o ${LFLAGS}

${OBJS}: ${HEADERS}

##################################################################
# Generic rules
##################################################################

.c.o:
	${CC} -o $@ -c ${CFLAGS} $<
